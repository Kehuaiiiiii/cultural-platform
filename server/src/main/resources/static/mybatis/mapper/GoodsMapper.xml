<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.mapper.GoodsMapper">
    <!--<select id="getAllGoods" parameterType="Integer" resultType="Goods">
        select * from goods limit #{min},#{max}
    </select>-->
    <select id="getGoods"  resultType="Goods">
        select * from goods <if test="name!=null||name!=''">where name like "%${name}%"</if>  limit #{min},#{max}
    </select>

    <!--<select id="getAllTotal" resultType="Integer">
        select count(*) from goods 
    </select>-->

    <select id="getTotal" parameterType="String" resultType="Integer">
        select count(*) from goods <if test="name!=null||name!=''">where name like "%${name}%"</if>
    </select>

    <insert id="addGoods" parameterType="Goods">
        insert into goods values(null,#{uid},#{name},#{price},#{number},#{weight},,#{introduce},#{url},#{status},#{created_time})
    </insert>

    <update id="updateGoods" parameterType="Goods">
        update goods set name=#{name},price=#{price},
        number=#{number},weight=#{weight},introduce=#{introduce},url=#{url},
        created_time=#{created_time} where id=#{id}
    </update>

    <delete id="deleteGoods" parameterType="Integer">
        delete from goods where id=#{id}
    </delete>

    <select id="getVerTotal" resultType="Integer">
        select count(*) from goods where status=0
    </select>

    <select id="getVerGoods" parameterType="Integer" resultType="Goods">
        select * from goods where status=0 limit #{min},#{max}
    </select>
</mapper>