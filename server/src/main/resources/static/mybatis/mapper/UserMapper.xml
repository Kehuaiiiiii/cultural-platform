<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.mapper.UserMapper">

    <select id="login" parameterType="String" resultType="User">
        select * from user where username=#{zh} and password=#{pwd}
    </select>

    <update id="updateUser" parameterType="User">
        update user set username=#{username},password=#{password}name=#{name},email=#{email},phone=#{phone},address=#{address} where pid=#{pid}
    </update>

    <insert id="addUser" parameterType="User">
        insert into user values(null,#{username},#{password},#{name},#{email},#{phone},#{address})
    </insert>

    <select id="getUserInfo" parameterType="User" resultType="User">
        select * from user where uid=#{uid}
    </select>

    <select id="getAllGoods" resultType="Goods">
        select * from goods
    </select>

    <insert id="addOrder" parameterType="Orders" >
        insert into orders values(null,#{user_id},#{merchant_id},#{pay_status},#{send_status},#{order_price},#{order_number},#{order_status})
    </insert>

    <update id="updateOrder" parameterType="Orders">
        update orders set send_status=#{send_status} where id=#{id}
    </update>

    <select id="getOrderInfo" parameterType="Orders" resultType="Orders">
        select * from orders where user_id=#{user_id}

    </select>

</mapper>