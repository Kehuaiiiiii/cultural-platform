<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.mapper.UserMapper">

    <select id="login" parameterType="String" resultType="User">
        select * from user where username=#{username} and password=#{password}
    </select>

    <update id="updateUser" parameterType="User">
        update user set username=#{username},password=#{password}name=#{name},email=#{email},phone=#{phone},address=#{address} where pid=#{pid}
    </update>

    <insert id="addUser" parameterType="User">
        insert into user values(null,#{username},#{password},#{name},#{email},#{phone},#{address})
    </insert>

    <select id="getUserInfo" parameterType="User" resultType="User">
        select * from user where uid=#{uid}
    </select>

    <select id="getRid" parameterType="Integer" resultType="Integer">
        select rid from user where uid=#{uid}
    </select>

    <select id="getUid" parameterType="String" resultType="Integer">
        select uid from user where username like "%${username}%"
    </select>

</mapper>